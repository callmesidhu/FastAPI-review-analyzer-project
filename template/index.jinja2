<!DOCTYPE html>
<html>
<head>
  <title>Amazon Customer Review Analysis</title>
  <link rel="stylesheet" href="/static/style.css">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Google+Sans:wght@300;400;500;600&display=swap" rel="stylesheet">
</head>
<body>
  <div class="container">
    <header>
      <h1>Amazon Customer Review Analysis</h1>
    </header>

    <nav class="nav-bar">
      <a href="/" class="nav-btn active">
        <span class="nav-icon">Home</span>
      </a>
      <a href="/products" class="nav-btn">
        <span class="nav-icon">Products</span>
      </a>
      <a href="/dashboard" class="nav-btn">
        <span class="nav-icon">Dashboard</span>
      </a>
      <a href="/clear" class="nav-btn clear-btn">
        <span class="nav-icon">Clear Data</span>
      </a>
    </nav>

    <div class="main-content">
      <div class="main-form">
        <div class="form-header">
          <h2>Start Your Analysis</h2>
          <p>Enter any Amazon product URL to extract customer insights and perform advanced sentiment analysis</p>
        </div>
        
        <form action="/scrape" method="post" id="analyzeForm">
          <div class="form-group">
            <label>Amazon Product URL <span class="required">*</span></label>
            <input name="url" type="url" required placeholder="Paste your Amazon product URL here..." value="" />
            <small class="info">System automatically detects and prevents duplicate analysis</small>
          </div>

          <button type="submit" class="btn-primary" id="analyzeBtn">
            Analyze Product & Extract Insights
          </button>
        </form>

        <div class="progress-details" id="progressDetails" style="display: none;">
            <div class="progress-container">
                <div class="progress-bar" id="progressBar"></div>
            </div>
            <p class="progress-text" id="progressText">Initializing...</p>
        </div>
      </div>

  
    </div>

  </div>

<script>
document.addEventListener('DOMContentLoaded', () => {
  const form = document.getElementById('analyzeForm');
  const btn = document.getElementById('analyzeBtn');
  const progressDetails = document.getElementById('progressDetails');
  const progressBar = document.getElementById('progressBar');
  const progressText = document.getElementById('progressText');

  if (form && btn) {
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const urlInput = form.querySelector('input[name="url"]');
      if (!urlInput || urlInput.value.trim() === '') {
          return; // Let HTML validation handle it if possible, or just return
      }

      // UI Updates
      btn.disabled = true;
      btn.classList.add('btn-loading');
      progressDetails.style.display = 'block';
      progressBar.style.width = '0%';
      progressText.textContent = 'Starting analysis...';

      const formData = new FormData(form);

      try {
        const response = await fetch('/api/scrape', {
            method: 'POST',
            body: formData
        });

        const reader = response.body.getReader();
        const decoder = new TextDecoder();

        while (true) {
            const { value, done } = await reader.read();
            if (done) break;
            
            const chunk = decoder.decode(value, { stream: true });
            const lines = chunk.split('\n');
            
            for (const line of lines) {
                if (!line.trim()) continue;
                
                try {
                    const data = JSON.parse(line);
                    
                    if (data.type === 'progress') {
                        const percent = Math.min(100, Math.round((data.count / data.total) * 100));
                        progressBar.style.width = percent + '%';
                        progressText.textContent = `${data.message} (${percent}%)`;
                    } else if (data.type === 'completed') {
                         progressBar.style.width = '100%';
                         progressText.textContent = 'Analysis complete! Redirecting...';
                         setTimeout(() => {
                             window.location.href = '/products';
                         }, 1000);
                    } else if (data.type === 'error') {
                        progressText.textContent = `Error: ${data.message}`;
                        progressText.style.color = '#f28b82';
                        btn.disabled = false;
                        btn.classList.remove('btn-loading');
                    }
                } catch (jsonError) {
                    console.error('Error parsing JSON:', jsonError);
                }
            }
        }

      } catch (error) {
          console.error("Fetch error:", error);
          progressText.textContent = "Connection error. Please try again.";
          btn.disabled = false;
          btn.classList.remove('btn-loading');
      }
    });
  }
});
</script>
      </div>

  
    </div>

  </div>
</body>
</html>
</body>
</html>
